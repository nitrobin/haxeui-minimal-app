function setIcon() {
    if (isVar("normal")) normal.icon = icon.selectedItem.path;
    if (isVar("styled")) styled.icon = icon.selectedItem.path;
    if (isVar("bitmap")) bitmap.icon = icon.selectedItem.path;
    if (isVar("native")) native.icon = icon.selectedItem.path;
