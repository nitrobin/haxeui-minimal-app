function onNormalClicked() {
    normal.userData++;
    normalClickCount.text = "Click count: " + normal.userData;
}

function onStyledClicked() {
    styled.userData++;
    styledClickCount.text = "Click count: " + styled.userData;
}

function onBitmapClicked() {
    bitmap.userData++;
    bitmapClickCount.text = "Click count: " + bitmap.userData;
}

function onNativeClicked() {
    native.userData++;
    nativeClickCount.text = "Click count: " + native.userData;
}

function setIconPosition() {
    if (isVar("normal")) normal.iconPosition = iconPosition.selectedItem.value;
    if (isVar("styled")) styled.iconPosition = iconPosition.selectedItem.value;
    if (isVar("bitmap")) bitmap.iconPosition = iconPosition.selectedItem.value;
    if (isVar("native")) native.iconPosition = iconPosition.selectedItem.value;
}

function setTextAlign() {
    if (isVar("normal")) normal.textAlign = textAlign.selectedItem.value;
