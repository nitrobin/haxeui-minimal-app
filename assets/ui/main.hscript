    if (isVar("bitmap")) bitmap.textAlign = textAlign.selectedItem.value;
    if (isVar("native")) native.textAlign = textAlign.selectedItem.value;
}

function setToggle() {
    if (isVar("normal")) normal.toggle = toggle.selected;
    if (isVar("styled")) styled.toggle = toggle.selected;
    if (isVar("bitmap")) bitmap.toggle = toggle.selected;
    if (isVar("native")) native.toggle = toggle.selected;
